<div class="d-flex">
    <form id="signup-form">
        <h1>Sign up form</h1>
        <div class="mb-3">
            <p>Name</p>
            <input type="text" class="recipe-builder border border-danger" id="exampleNameEmail1">
            <div class="form-text">Please Enter your name.</div>
        </div>
        <div class="mb-3">
            <p>Email Address</p>
            <input type="email" class="recipe-builder border border-danger" id="emailHelp">
            <div class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <p>Password</p>
            <input type="password" class="recipe-builder border border-danger" id="exampleInputPassword1">
        </div>

        <button id="signup-btn" type="submit" class="btn btn-primary signup-form">Submit</button>

        <p>Already have an account? <a href="/login">login here</a></p>
    </form>
</div>

<script src="js/signup.js"></script>