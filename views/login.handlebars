<div class="mx-auto" style="max-width: 25rem;">
    <form id="login-form">
        <h1 class="mx-auto" style="width: 8rem;">Login</h1>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" class="form-control border border-danger" id="email-login" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control border border-danger" id="password-login">
        </div>

        <button type="submit" class="btn btn-danger btn-lg btn-block">Submit</button>
        <br>
        <p>Dont have an account? <a class="text-danger" href="/signup">sign up here</a></p>
        <a href="" class="text-danger">Forgot password?</a>
    </form>
</div>


<script src="/js/login.js"></script>